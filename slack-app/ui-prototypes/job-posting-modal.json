{
  "type": "modal",
  "callback_id": "job_posting_submit",
  "private_metadata": "{\"post_kind\":\"job_posting\"}",
  "title": {
    "type": "plain_text",
    "text": "Post Job",
    "emoji": true
  },
  "submit": {
    "type": "plain_text",
    "text": "Create Preview",
    "emoji": true
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel",
    "emoji": true
  },
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Structured job post*\nRequired fields mirror the recurring Slack reminder and improve discoverability."
      }
    },
    {
      "type": "input",
      "block_id": "job_company_name_block",
      "label": {
        "type": "plain_text",
        "text": "Company name",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_company_name_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Example: Calendly",
          "emoji": true
        }
      },
      "optional": false,
      "hint": {
        "type": "mrkdwn",
        "text": "If confidential, check *Stealth company* below and leave this blank."
      }
    },
    {
      "type": "input",
      "block_id": "job_stealth_company_block",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Company visibility",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "job_stealth_company_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Stealth company",
              "emoji": true
            },
            "value": "stealth_enabled"
          }
        ]
      }
    },
    {
      "type": "input",
      "block_id": "job_role_title_block",
      "label": {
        "type": "plain_text",
        "text": "Role title",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_role_title_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Example: Principal Engineer",
          "emoji": true
        }
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_employment_type_block",
      "label": {
        "type": "plain_text",
        "text": "Employment type",
        "emoji": true
      },
      "element": {
        "type": "static_select",
        "action_id": "job_employment_type_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select a role type",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Full-time",
              "emoji": true
            },
            "value": "full_time"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Part-time",
              "emoji": true
            },
            "value": "part_time"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Contract",
              "emoji": true
            },
            "value": "contract"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Consulting",
              "emoji": true
            },
            "value": "consulting"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Cofounder / founding role",
              "emoji": true
            },
            "value": "cofounder"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_location_summary_block",
      "label": {
        "type": "plain_text",
        "text": "Location",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_location_summary_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Office city/cities or remote constraints",
          "emoji": true
        }
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_work_arrangement_block",
      "label": {
        "type": "plain_text",
        "text": "Work arrangement",
        "emoji": true
      },
      "element": {
        "type": "static_select",
        "action_id": "job_work_arrangement_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select work style",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "On-site",
              "emoji": true
            },
            "value": "onsite"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Hybrid",
              "emoji": true
            },
            "value": "hybrid"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Remote",
              "emoji": true
            },
            "value": "remote"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Flexible / mixed",
              "emoji": true
            },
            "value": "flexible"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_comp_disclosure_block",
      "label": {
        "type": "plain_text",
        "text": "Compensation disclosure",
        "emoji": true
      },
      "element": {
        "type": "static_select",
        "action_id": "job_comp_disclosure_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select compensation status",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Range provided",
              "emoji": true
            },
            "value": "range_provided"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Negotiable / depends",
              "emoji": true
            },
            "value": "negotiable"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Not listed",
              "emoji": true
            },
            "value": "not_listed"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Commission / variable",
              "emoji": true
            },
            "value": "performance_based"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_comp_range_block",
      "label": {
        "type": "plain_text",
        "text": "Compensation details",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_comp_range_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Example: $170k-$220k USD base + equity",
          "emoji": true
        }
      },
      "optional": true,
      "hint": {
        "type": "mrkdwn",
        "text": "Optional unless compensation disclosure says range is provided."
      }
    },
    {
      "type": "input",
      "block_id": "job_visa_policy_block",
      "label": {
        "type": "plain_text",
        "text": "Visa sponsorship",
        "emoji": true
      },
      "element": {
        "type": "static_select",
        "action_id": "job_visa_policy_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select visa policy",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Can sponsor visa",
              "emoji": true
            },
            "value": "yes"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Cannot sponsor visa",
              "emoji": true
            },
            "value": "no"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Case-by-case",
              "emoji": true
            },
            "value": "case_by_case"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Unknown / not sure",
              "emoji": true
            },
            "value": "unknown"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_relationship_block",
      "label": {
        "type": "plain_text",
        "text": "Your relationship to role",
        "emoji": true
      },
      "element": {
        "type": "static_select",
        "action_id": "job_relationship_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Select relationship",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Hiring manager",
              "emoji": true
            },
            "value": "hiring_manager"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Team member / peer",
              "emoji": true
            },
            "value": "team_member"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Recruiter",
              "emoji": true
            },
            "value": "recruiter"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Will refer / introduce",
              "emoji": true
            },
            "value": "referral"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Other",
              "emoji": true
            },
            "value": "other"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_channel_focus_block",
      "label": {
        "type": "plain_text",
        "text": "Channel focus",
        "emoji": true
      },
      "element": {
        "type": "static_select",
        "action_id": "job_channel_focus_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Auto-pick or override",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Auto-pick best channel",
              "emoji": true
            },
            "value": "auto"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "#jobs (general)",
              "emoji": true
            },
            "value": "jobs"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "#onsite-jobs",
              "emoji": true
            },
            "value": "onsite_jobs"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "#remote-jobs",
              "emoji": true
            },
            "value": "remote_jobs"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "#jobs-cofounders",
              "emoji": true
            },
            "value": "jobs_cofounders"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "#jobs-consulting",
              "emoji": true
            },
            "value": "jobs_consulting"
          }
        ],
        "initial_option": {
          "text": {
            "type": "plain_text",
            "text": "Auto-pick best channel",
            "emoji": true
          },
          "value": "auto"
        }
      },
      "optional": false,
      "hint": {
        "type": "mrkdwn",
        "text": "Auto-pick routes to one of #jobs, #onsite-jobs, #remote-jobs, #jobs-cofounders, #jobs-consulting."
      }
    },
    {
      "type": "input",
      "block_id": "job_url_block",
      "label": {
        "type": "plain_text",
        "text": "Job link",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_url_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "https://...",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "job_skills_block",
      "label": {
        "type": "plain_text",
        "text": "Skills / stack",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_skills_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Comma-separated: Ruby, Go, AWS, ...",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "job_description_block",
      "label": {
        "type": "plain_text",
        "text": "Role summary",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_description_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Two to five concise lines",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "job_thread_questions_block",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Thread behavior",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "job_thread_questions_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "I am open to thread questions on this post",
              "emoji": true
            },
            "value": "allow_thread_questions"
          }
        ]
      }
    }
  ]
}
