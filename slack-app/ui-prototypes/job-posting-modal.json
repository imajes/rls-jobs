{
  "type": "modal",
  "callback_id": "job_posting_submit",
  "private_metadata": "{\"post_kind\":\"job_posting\"}",
  "title": {
    "type": "plain_text",
    "text": "Share Opportunity",
    "emoji": true
  },
  "submit": {
    "type": "plain_text",
    "text": "Review Card",
    "emoji": true
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel",
    "emoji": true
  },
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "plain_text",
        "text": "You are about two minutes away from posting a clean, high-signal opportunity card.",
        "emoji": true
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Basics",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "job_company_name_block",
      "label": {
        "type": "plain_text",
        "text": "Company",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_company_name_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Example: Calendly or Stealth",
          "emoji": true
        }
      },
      "optional": false,
      "hint": {
        "type": "plain_text",
        "text": "For confidential listings, include the word Stealth.",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "job_role_title_block",
      "label": {
        "type": "plain_text",
        "text": "Role",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_role_title_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Example: Principal Engineer, Infrastructure",
          "emoji": true
        }
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_location_summary_block",
      "label": {
        "type": "plain_text",
        "text": "Location",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_location_summary_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "City, region, or remote constraints",
          "emoji": true
        }
      },
      "optional": false
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Role Details",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "job_employment_types_block",
      "label": {
        "type": "plain_text",
        "text": "Employment types",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "job_employment_types_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Full-time",
              "emoji": true
            },
            "value": "full_time"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Part-time",
              "emoji": true
            },
            "value": "part_time"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Contract",
              "emoji": true
            },
            "value": "contract"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Consulting",
              "emoji": true
            },
            "value": "consulting"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Cofounder or founding role",
              "emoji": true
            },
            "value": "cofounder"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_work_arrangements_block",
      "label": {
        "type": "plain_text",
        "text": "Work arrangements",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "job_work_arrangements_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Remote",
              "emoji": true
            },
            "value": "remote"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Hybrid",
              "emoji": true
            },
            "value": "hybrid"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "On-site",
              "emoji": true
            },
            "value": "onsite"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Flexible or mixed",
              "emoji": true
            },
            "value": "flexible"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Compensation",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "job_compensation_value_block",
      "label": {
        "type": "plain_text",
        "text": "Base pay or range",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_compensation_value_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Examples: $100-$200k USD, 1-4%, or Negotiable",
          "emoji": true
        }
      },
      "optional": false,
      "hint": {
        "type": "plain_text",
        "text": "A concrete number or range is best.",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "job_compensation_components_block",
      "label": {
        "type": "plain_text",
        "text": "Components",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "job_compensation_components_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Equity",
              "emoji": true
            },
            "value": "equity"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Bonus",
              "emoji": true
            },
            "value": "bonus"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Commission",
              "emoji": true
            },
            "value": "commission"
          }
        ]
      },
      "optional": true
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Additional Context",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "job_visa_policy_block",
      "label": {
        "type": "plain_text",
        "text": "Visa sponsorship",
        "emoji": true
      },
      "element": {
        "type": "radio_buttons",
        "action_id": "job_visa_policy_radio",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Can sponsor visa",
              "emoji": true
            },
            "value": "yes"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Cannot sponsor visa",
              "emoji": true
            },
            "value": "no"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Case-by-case",
              "emoji": true
            },
            "value": "case_by_case"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Unknown",
              "emoji": true
            },
            "value": "unknown"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_relationship_block",
      "label": {
        "type": "plain_text",
        "text": "Relationship to this role",
        "emoji": true
      },
      "element": {
        "type": "radio_buttons",
        "action_id": "job_relationship_radio",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Hiring manager",
              "emoji": true
            },
            "value": "hiring_manager"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Team member",
              "emoji": true
            },
            "value": "team_member"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Recruiter",
              "emoji": true
            },
            "value": "recruiter"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Can refer or introduce",
              "emoji": true
            },
            "value": "referral"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Other",
              "emoji": true
            },
            "value": "other"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "job_links_block",
      "label": {
        "type": "plain_text",
        "text": "Links",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_links_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "One URL per line or comma-separated",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "job_skills_block",
      "label": {
        "type": "plain_text",
        "text": "Skills",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_skills_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Comma-separated",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "job_summary_block",
      "label": {
        "type": "plain_text",
        "text": "Summary",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "job_summary_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Two to five concise lines",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Conversation",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "job_thread_questions_block",
      "label": {
        "type": "plain_text",
        "text": "Thread settings",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "job_thread_questions_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Open to thread questions on this post",
              "emoji": true
            },
            "value": "allow_thread_questions"
          }
        ]
      },
      "optional": true
    }
  ]
}
