# Required
SLACK_APP_TOKEN=YOUR_SLACK_APP_TOKEN
SLACK_BOT_TOKEN=YOUR_SLACK_BOT_TOKEN
SLACK_LOG_LEVEL=INFO

# Recommended for publish routing (go-live)
RLS_CHANNEL_JOBS_ID=
RLS_CHANNEL_ONSITE_JOBS_ID=
RLS_CHANNEL_REMOTE_JOBS_ID=
RLS_CHANNEL_JOBS_COFOUNDERS_ID=
RLS_CHANNEL_JOBS_CONSULTING_ID=
RLS_CHANNEL_JOBS_BETA_ID=

# Operation mode
RLS_OPERATION_MODE=normal

# Optional webhook for API ingestion after publish
RLS_JOBS_API_INGEST_URL=
RLS_JOBS_API_POSTINGS_URL=
RLS_JOBS_API_AUTH_LINK_URL=
RLS_JOBS_API_TOKEN=
RLS_JOBS_API_TIMEOUT_MS=5000
RLS_API_READ_ENABLED=false

# Durable ingest outbox (recommended for production)
RLS_OUTBOX_ENABLED=false
RLS_OUTBOX_PATH=storage/ingest-outbox.ndjson
RLS_OUTBOX_DEAD_PATH=storage/ingest-outbox.dead.ndjson
RLS_OUTBOX_FLUSH_INTERVAL_MS=15000
RLS_INGEST_RETRY_MAX_ATTEMPTS=10
RLS_INGEST_RETRY_BASE_MS=1000
RLS_OUTBOX_BACKLOG_WARN=25
RLS_OUTBOX_BACKLOG_CRITICAL=100

# Soft moderation gate
RLS_MODERATION_ENABLED=true
RLS_NEW_ACCOUNT_DAYS=14
RLS_MOD_QUEUE_CHANNEL_ID=

# Ops alerts (dual-sink: logs + Slack webhook)
RLS_ALERTS_ENABLED=true
RLS_ALERTS_SLACK_WEBHOOK_URL=
RLS_ALERTS_MIN_INTERVAL_SECONDS=900
