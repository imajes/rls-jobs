{
  "display_information": {
    "name": "rls-jobs",
    "description": "Structured job and candidate intake for RLS",
    "background_color": "#0f172a"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": true,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": true
    },
    "bot_user": {
      "display_name": "rls-jobs",
      "always_online": false
    },
    "shortcuts": [
      {
        "name": "Post a job",
        "type": "global",
        "callback_id": "post_job_shortcut",
        "description": "Open the structured job posting modal"
      },
      {
        "name": "Post candidate availability",
        "type": "global",
        "callback_id": "post_candidate_shortcut",
        "description": "Open the structured candidate posting modal"
      }
    ],
    "slash_commands": [
      {
        "command": "/rls-jobs-intake",
        "url": "https://example.com/slack/commands",
        "description": "Start guided intake (or pass `job` / `candidate`)",
        "usage_hint": "[job|candidate]",
        "should_escape": false
      },
      {
        "command": "/rls-job-intake",
        "url": "https://example.com/slack/commands",
        "description": "Alias for /rls-jobs-intake",
        "usage_hint": "[job|candidate]",
        "should_escape": false
      },
      {
        "command": "/rls-jobs-auth",
        "url": "https://example.com/slack/commands",
        "description": "Generate one-time RLS web access link",
        "usage_hint": "",
        "should_escape": false
      },
      {
        "command": "/rls-job-auth",
        "url": "https://example.com/slack/commands",
        "description": "Alias for /rls-jobs-auth",
        "usage_hint": "",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": ["chat:write", "chat:write.public", "commands", "users:read"]
    }
  },
  "event_subscriptions": {
    "request_url": "https://example.com/slack/events",
    "bot_events": ["app_home_opened"]
  },
  "settings": {
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": true,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
