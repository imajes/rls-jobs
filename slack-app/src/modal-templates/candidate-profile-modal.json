{
  "type": "modal",
  "callback_id": "candidate_profile_submit",
  "private_metadata": "{\"post_kind\":\"candidate_profile\"}",
  "title": {
    "type": "plain_text",
    "text": "Share Candidate Profile",
    "emoji": true
  },
  "submit": {
    "type": "plain_text",
    "text": "Review Card",
    "emoji": true
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel",
    "emoji": true
  },
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "plain_text",
        "text": "A strong profile card helps the right people find this candidate quickly.",
        "emoji": true
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Basics",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "candidate_headline_block",
      "label": {
        "type": "plain_text",
        "text": "Target role(s)",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "candidate_headline_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Example: Staff Engineer, Product Engineer, EM",
          "emoji": true
        }
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "candidate_location_summary_block",
      "label": {
        "type": "plain_text",
        "text": "Location",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "candidate_location_summary_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "City, region, timezone, relocation constraints",
          "emoji": true
        }
      },
      "optional": false
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Role Details",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "candidate_engagement_types_block",
      "label": {
        "type": "plain_text",
        "text": "Engagement types",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "candidate_engagement_types_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Full-time",
              "emoji": true
            },
            "value": "full_time"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Part-time",
              "emoji": true
            },
            "value": "part_time"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Contract",
              "emoji": true
            },
            "value": "contract"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Consulting",
              "emoji": true
            },
            "value": "consulting"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Cofounder",
              "emoji": true
            },
            "value": "cofounder"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "candidate_work_arrangements_block",
      "label": {
        "type": "plain_text",
        "text": "Work arrangements",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "candidate_work_arrangements_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Remote",
              "emoji": true
            },
            "value": "remote"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Hybrid",
              "emoji": true
            },
            "value": "hybrid"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "On-site",
              "emoji": true
            },
            "value": "onsite"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Flexible or mixed",
              "emoji": true
            },
            "value": "flexible"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "candidate_availability_modes_block",
      "label": {
        "type": "plain_text",
        "text": "Availability",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "candidate_availability_modes_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Actively interviewing",
              "emoji": true
            },
            "value": "actively_interviewing"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Open to opportunities",
              "emoji": true
            },
            "value": "open_to_opportunities"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Contract or consulting only",
              "emoji": true
            },
            "value": "contract_only"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Cofounder only",
              "emoji": true
            },
            "value": "cofounder_only"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Compensation",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "candidate_compensation_disclosure_block",
      "label": {
        "type": "plain_text",
        "text": "Disclosure",
        "emoji": true
      },
      "element": {
        "type": "radio_buttons",
        "action_id": "candidate_compensation_disclosure_radio",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Range provided",
              "emoji": true
            },
            "value": "range_provided"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Negotiable or TBD",
              "emoji": true
            },
            "value": "negotiable"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Not listed",
              "emoji": true
            },
            "value": "not_listed"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Commission or variable",
              "emoji": true
            },
            "value": "performance_based"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "candidate_compensation_value_block",
      "label": {
        "type": "plain_text",
        "text": "Pay number or range",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "candidate_compensation_value_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Examples: $180-$220k USD, 1-4%, or Negotiable",
          "emoji": true
        }
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "candidate_compensation_components_block",
      "label": {
        "type": "plain_text",
        "text": "Components",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "candidate_compensation_components_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Equity",
              "emoji": true
            },
            "value": "equity"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Bonus",
              "emoji": true
            },
            "value": "bonus"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Commission",
              "emoji": true
            },
            "value": "commission"
          }
        ]
      },
      "optional": true
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Additional Context",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "candidate_visa_policy_block",
      "label": {
        "type": "plain_text",
        "text": "Work authorization or visa",
        "emoji": true
      },
      "element": {
        "type": "radio_buttons",
        "action_id": "candidate_visa_policy_radio",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Authorized, no sponsorship needed",
              "emoji": true
            },
            "value": "no"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Will require sponsorship",
              "emoji": true
            },
            "value": "yes"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Case-by-case",
              "emoji": true
            },
            "value": "case_by_case"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Prefer not to say",
              "emoji": true
            },
            "value": "unknown"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "candidate_relationship_block",
      "label": {
        "type": "plain_text",
        "text": "Relationship",
        "emoji": true
      },
      "element": {
        "type": "radio_buttons",
        "action_id": "candidate_relationship_radio",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "I am the candidate",
              "emoji": true
            },
            "value": "candidate_self"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Recruiter or sourcer",
              "emoji": true
            },
            "value": "recruiter"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Other",
              "emoji": true
            },
            "value": "other"
          }
        ]
      },
      "optional": false
    },
    {
      "type": "input",
      "block_id": "candidate_links_block",
      "label": {
        "type": "plain_text",
        "text": "Links",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "candidate_links_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Portfolio, resume, LinkedIn, GitHub. One per line.",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "candidate_skills_block",
      "label": {
        "type": "plain_text",
        "text": "Skills",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "candidate_skills_input",
        "multiline": false,
        "placeholder": {
          "type": "plain_text",
          "text": "Comma-separated",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "input",
      "block_id": "candidate_notes_block",
      "label": {
        "type": "plain_text",
        "text": "Notes",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input",
        "action_id": "candidate_notes_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Anything helpful for matching",
          "emoji": true
        }
      },
      "optional": true
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "Conversation",
        "emoji": true
      }
    },
    {
      "type": "input",
      "block_id": "candidate_thread_questions_block",
      "label": {
        "type": "plain_text",
        "text": "Thread settings",
        "emoji": true
      },
      "element": {
        "type": "checkboxes",
        "action_id": "candidate_thread_questions_checkbox",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Open to thread replies on this profile",
              "emoji": true
            },
            "value": "allow_thread_questions"
          }
        ]
      },
      "optional": true
    }
  ]
}
